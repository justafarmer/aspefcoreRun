@model SprintOne.Models.ViewModels.MailboxViewModel

@{
    ViewData["Title"] = "Start New Conversation";
}

<h1>Start New Conversation</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Send">
            <select asp-for="ReceiverID" asp-items="@Model.ReceiverList">
                <option>Select Recipient</option>
            </select>
            <div class="form-group">
                <label asp-for="Header" class="control-label"></label>
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:1000px;">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control" style="height:200px;"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
        </form>
    </div>
    </div>
</div>
<div>
   <a asp-action="Mail">Back to List</a>
</div>

