@model SprintOne.Models.RaceRecord

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RaceRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RaceType" class="control-label">Race Type: 1 = Mile, 2 = 5k, 3 = 10k, 4 = Half, 5 = Full</label>
                <input asp-for="RaceType" class="form-control" />
                <span asp-validation-for="RaceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RaceTime" class="control-label"></label>
                <input asp-for="RaceTime" class="form-control" />
                <span asp-validation-for="RaceTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MileTime" class="control-label"></label>
                <input asp-for="MileTime" class="form-control" />
                <span asp-validation-for="MileTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
